@page "/"
@using BoardGame.Components;
@using BoardGame.Models;

<PageTitle>Board Game</PageTitle>

<Board Tokens="Tokens">
    @for(int i = 0; i < 36; i++) {
        <Space SpaceId="i" />
    }
</Board>

@code {
    List<TokenModel> Tokens = new List<TokenModel>();

    protected override void OnInitialized() {
        Tokens.Add(new TokenModel { Id = 1 , SpaceId = 0});
        Tokens.Add(new TokenModel { Id = 2 , SpaceId = 0});
        Tokens.Add(new TokenModel { Id = 3 , SpaceId = 0});
    }
}