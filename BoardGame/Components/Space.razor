@inject GameManagerService Manager;

@{
    if(SpaceModel is QuizSpaceModel quizSpace) {
        var str = quizSpace.IsSloved ? quizSpace.QuizPath : $"images/space-bg/{quizSpace.QuizReward}.png";
        styles = $"background: url({str}) #fff center/contain no-repeat;";
    }
}

<ul 
    class="space @(SpaceModel is EventSpaceModel ? "event" : "")" style="@styles"
>
    @foreach (var token in Manager.Tokens) {
        if (token.SpaceId == SpaceModel.SpaceId) {
            <li class="token item-@token.Id"></li>
        }
    }

</ul>

@code {
    [Parameter] public ISpaceModel SpaceModel { get; set; }
    [CascadingParameter] public Board? Board { get; set; }
    private string styles = "";
}