<ul class="space" ondragover="event.preventDefault();" @ondrop="TokenAdded">
    <CascadingValue Value="this">
    @{
        if (SpaceModel.Tokens != null)  
            foreach (var token in SpaceModel.Tokens) {
                <Token TokenModel="token" TokenDelete="TokenDeleted"/>
            }
    }
    </CascadingValue>
</ul>

@code {
    [CascadingParameter] Board Board { get; set; }
    [Parameter] public SpaceModel SpaceModel { get; set; }

    private void TokenAdded() {
        var match = Board.Spaces.First(x => x == SpaceModel);
        var token = new TokenModel {
                Id = Board.Payload.Id,
                SpaceId = SpaceModel.SpaceId
            };
        match.Tokens.Add(token);
    }

    private void TokenDeleted() {
        var payloadSpace = Board.Spaces.First(x => x.SpaceId == Board.Payload.SpaceId).Tokens.Remove(Board.Payload);
    }
}